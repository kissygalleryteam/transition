@keyframes fadein {
    from { opacity: 0; }
    to { opacity: 1; }
}
@keyframes fadeout {
    from { opacity: 1; }
    to { opacity: 0; }
}

/* Be sure to use the shorthand, or something weird may happen (I don't know why) */
.mb-fade.out {
    animation-name: fadeout;
    animation-duration: 1s;
    animation-fill-mode: both;
}

.mb-fade.in {
    animation-name: fadein;
    animation-duration: 1s;
    animation-fill-mode: both;
}
